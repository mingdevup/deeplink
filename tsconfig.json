// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json", 
  "compilerOptions": {
   
    //자바스크립트 컴파일 허용
    "allowJs": true,

    //default export가 없는 모듈에서 default imports를 허용합니다. 코드 방출에는 영향을 주지 않으며, 타입 검사만 수행합니다.  
    "allowSyntheticDefaultImports": true,
    
    //모든 선언 파일(*.d.ts)의 타입 검사를 건너뜁니다.
    "skipLibCheck": true,
    
    //런타임 바벨 생태계 호환성을 위한 __importStar와 __importDefault 헬퍼를 내보내고 타입 시스템 호환성을 위해 --allowSyntheticDefaultImports를 활성화합니다.
    "esModuleInterop": true,
    
    //추가 검사를 수행하여 별도의 컴파일 (예를 들어 트랜스파일된 모듈 혹은 @babel/plugin-transform-typescript) 이 안전한지 확인합니다.
    "isolatedModules": true,


    //.tsx 파일에서 JSX 지원: "React", "Preserve", "react-native". JSX를 확인하세요.
    "jsx": "react-native",

    //컴파일에 포함될 라이브러리 파일 목록입니다.
    "lib": ["es6","es2017"],

    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "target": "ES6",
  },


  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],

  "baseUrl": ".",
  "path":{
    "@Router/*": ["src/Router/*"],
    "@Router": ["src/Router"],
    "@Styled/*": ["src/Styled/*"],
    "@Styled": ["src/Styled"],
  }
}
